    <declare-styleable name="ColorPicker">
        <attr name="selectNoneButtonText" format="string" />
        <attr name="noneSelectedSummaryText" format="string" />
        <attr name="showValue" format="boolean"/>
        <attr name="valueMaxIfHidden" format="boolean"/>
        <attr name="showAlpha" format="boolean"/>
        <attr name="showHex" format="boolean"/>
