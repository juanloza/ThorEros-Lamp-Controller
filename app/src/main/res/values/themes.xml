<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThorErosLampController.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Preferences padding left-->
        <item name="android:listPreferredItemPaddingStart">30dp</item>

        <!-- PalettePreference-->
        <item name="paletteBorderColor">@color/black</item>
        <item name="paletteBorderSize">1dp</item>
        <item name="paletteHeight">28dp</item>

        <item name="floatingActionButtonStyle">@style/fab_style</item>
        <item name="preferenceCategoryTitleTextColor">@color/violeta_400</item>
        <item name="preferenceCategoryTitleTextAppearance">@style/CategoryPreferenceStyle</item>

        <item name="android:progressBarPadding">0dp</item>
<!--        <item name="preferenceCategoryTitleTextColor">@color/violeta_400</item>-->
    </style>

    <style name="CategoryPreferenceStyle" parent="PreferenceCategoryTitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">700</item>
    </style>
    <style name="fab_style" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/violeta_400</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="ProgressBarStyle" parent="@android:style/Widget.Material.ProgressBar.Horizontal">
<!--        <item name="android:minHeight">4dp</item>-->
<!--        <item name="android:maxHeight">4dp</item>-->
        <item name="android:progressBarPadding">0dp</item>
        <item name="android:paddingTop">-10dp</item>
        <item name="android:paddingBottom">-10dp</item>
        <item name="android:paddingVertical">-10dp</item>
    </style>

    <style name="Theme.ThorErosLampController" parent="Theme.ThorErosLampController.Base">
        <!-- Basic colors -->
        <item name="colorPrimary">@color/rosa_200</item>
        <item name="colorPrimaryVariant">@color/rosa_100</item>
        <item name="colorPrimaryDark">@color/rosa_300</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/rosa_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/rosa_50</item>
        <item name="android:navigationBarColor">@color/rosa_200</item>
        <!--        <color name="primaryLightColor">#ffc1e3</color>-->
        <!--        <color name="primaryDarkColor">#bf5f82</color>-->
        <!--        <color name="secondaryLightColor">#c3ffff</color>-->
        <!--        <color name="secondaryDarkColor">#5cc1a1</color>-->

        <!-- PalettePreference-->
        <item name="paletteBorderColor">@color/rosa_75</item>
    </style>

    <style name="Theme.ThorErosLampController.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ThorErosLampController.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>