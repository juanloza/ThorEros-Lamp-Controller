<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="FireConfig"
        android:title="@string/fire_config">

        <SeekBarPreference
            android:key="fire_cooling"
            android:min="@integer/ubyte_min"
            android:max="@integer/ubyte_max"
            android:title="@string/cooling"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:key="fire_sparking"
            android:min="@integer/ubyte_min"
            android:max="@integer/ubyte_max"
            android:title="@string/sparking"
            app:showSeekBarValue="true" />

        <thoreros.libraries.preference.palette.PalettePreference
            app:key="fire_palette"
            android:entries="@array/modo_entries"
            android:entryValues="@array/modo_values"
            android:defaultValue="0"
            app:entryPreviewThumbnails="@array/palettes_thumbs"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="fire_palette2"
            android:entries="@array/modo_entries"
            android:entryValues="@array/modo_values"
            android:defaultValue="0"
            app:useSimpleSummaryProvider="true" />

        <thoreros.libraries.preference.colorpicker.ColorPickerPreference
            app:key="firstColor"
            android:title="Color fuegooooo"
            android:summary="Color para pintarle la cara a tu ****"
            app:colorpicker_showHex="true"
            app:colorpicker_showAlpha="false"
            app:colorpicker_showPreview="true" />

    </PreferenceCategory>

</PreferenceScreen>